<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorPrimary"
    tools:context=".SectionFragment"
    >

    <TextView
        android:id="@+id/section_label"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_number_page"
        android:gravity="center"
        android:textColor="#184cac"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="34"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/ic_add"
        android:tint="@android:color/white"
        app:backgroundTint="?colorAccent"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="@+id/section_label"
        app:layout_constraintEnd_toEndOf="@+id/section_label"
        app:layout_constraintTop_toTopOf="@+id/section_label"
        app:layout_constraintVertical_bias="0.0"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/remove_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/ic_remove"
        android:tint="@android:color/white"
        app:backgroundTint="?colorAccent"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="@+id/section_label"
        app:layout_constraintStart_toStartOf="@+id/section_label"
        app:layout_constraintTop_toTopOf="@+id/section_label"
        />

    <Button
        android:id="@+id/create_notification"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/notification_create_ripple"
        android:stateListAnimator="@animator/create_notification"
        android:text="Create new notification"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/section_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        />
</android.support.constraint.ConstraintLayout>